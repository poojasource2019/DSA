#include<iostream>
using namespace std;

int main(){
    int n;
    cin>>n;
    int i=1,j=1;
    while(i<=n){
        char startingChar = 'A'+i-1;
        j=1;
        while(j<=i){
            cout<<startingChar;
            j++;
        }
        cout<<endl;
        i++;
    }
}

