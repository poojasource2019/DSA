//Program for pattern 
1.
ABCD 
BCDE 
CDEF DEFG
#include <iostream>
using namespace std;

int main() {
    // Write C++ code here
    int n;
    cout << "Enter the n";
    cin>>n;
    int i=1,j=1;
    
    while(i<=n){
        char startingChar = 'A'+i-1;
        j=1;
        while(j<=n){
           char ch =  startingChar+j-1;
           cout << ch;
           j++;
        }
        cout<<endl;
        i++;
    }
    return 0;
}


