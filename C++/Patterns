int main(){
    int n;
    cin>>n;
    int i=1,j;
    while(i<=n){
        j=1;
        while(j<=n-i+1){
            cout<<n-i+1;
            j++;
        }
        cout<<endl;
        i++;
    }
    
}

7.
   1
  121
 12321
1234321

int main() {
    // Write C++ code here
    int n;
    cout<<"ENTER THE N";
    cin>>n;
    int i=1,j;
    while(i<=n){
        //space
        int space = n-i,s=1;
        while(s<=space){
            cout<<" ";
            s++;
        }
        //1st half
        j=1;
        while(j<=i){
            cout<<j;
            j++;
        }
        //2nd half
        j=i-1;
        while(j>=1){
            cout<<j;
            j--;
        }
        cout<<endl;
        i++;
    }
    return 0;
}

8.
   *
  ***
 *****
*******

int main(){
    int n;
    cin>>n;
    int i=1,j;
    while(i<=n){
        int space=n-i,s=1;
        while(s<=space){
            cout<<" ";
            s++;
        }
        j=1;
        while(j<=2*i-1){
            cout<<"*";
            j++;
        }
        cout<<endl;
        i++;
    }
}

9.
   1
  232
 34543
4567654

int main() {
    // Write C++ code here
    int n;
    cin>>n;
    int i=1,j;
    while(i<=n){
        //space
        int space = n-i,s=1;
        while(s<=space){
            cout<<" ";
            s++;
        }
        //1st half
        j=i;
        int inc = 1;
        while(inc<=i){
            cout<<j;
            j++;
            inc++;
        }
        //2nd half
        j=j-2;
        int dec=i-1;
        while(dec>=1){
            cout<<j;
            j--;
            dec--;
        }
        cout<<endl;
        i++;
    }
    return 0;
}









