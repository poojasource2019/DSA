int main(){
    int n;
    cin>>n;
    int i=1,j=1;
    while(i<=n){
        char startingChar = 'A'+n-i;
        j=1;
        while(j<=i){
            char ch = startingChar+j-1;
            cout<<ch;
            j++;
        }
        cout<<endl;
        i++;
    }
}

5.
_ _ _ 1
_ _ 1 2
_ 1 2 3
1 2 3 4

int main(){
    int n;
    cin>>n;
    int i=1,j=1;
    while(i<=n){
        int space = n-i, s=1;
        while(s<=space){
            cout<<" ";
            s++;
        }
        j=1;
        while(j<=i){
            cout<<j;
            j++;
        }
        cout<<endl;
        i++;
    }
}

6.
4444
333
22
1

int main(){
    int n;
    cin>>n;
    int i=1,j;
    while(i<=n){
        j=1;
        while(j<=n-i+1){
            cout<<n-i+1;
            j++;
        }
        cout<<endl;
        i++;
    }
    
}







